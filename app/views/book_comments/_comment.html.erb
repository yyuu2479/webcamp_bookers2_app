<table>
  <% book_comments.each do |books|%>
    <tr>
      <td><%= attachment_image_tag books.user, :profile_image, :fill,65,65, format: 'jpeg', fallback: 'no-image.jpeg'%></td>
      <td><%= books.comment %></td>
      <% if books.user.id == current_user.id%>
        <td>
          <%= link_to book_book_comment_path(book.id, books.id), method: :delete, remote: true do%>
            <button class="btn btn-danger btn-sm">Destroy</button>
          <% end %>
        </td>
      <%end%>
    </tr>
    <tr>
      <td>
        <%= link_to user_path(books.user) do %>
          <%= books.user.name %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>