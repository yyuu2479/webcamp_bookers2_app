<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
    <h3 class="errors"><%= @book.errors.count%> errors prohibited this obj from being saved:</h3>
    <ul class="errors">
      <% @book.errors.full_messages.each do |message|%>
        <li><%= message%></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row" id="books_show">
    <%= render 'layouts/search', class:'mb-2'%>
    <%= render "books/index", book: @book, books: @books %>
  </div>
</div>
