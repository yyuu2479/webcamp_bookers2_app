<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'books/list', book:@book %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td>
              <%= link_to user_path(@books.user) do%>
                <%= attachment_image_tag @books.user, :profile_image, :fill,40,40, format:'jpeg', fallback: "no-image.jpeg"%><br />
                <%= @books.user.name%>
              <% end %>
            </td>
            <td><%= link_to @books.title, book_path(@books) %></td>
            <td><%= @books.body %></td>
            <% if @books.user_id == current_user.id%>
              <td>
                <%= link_to "Edit", edit_book_path(@books), class:"btn  btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@books), method: :delete, class:"btn btn-sm btn-danger" %>
              </td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</main>