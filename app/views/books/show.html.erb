<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <%= render 'books/list', book: @book_new, user: @user%>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td>
              <%= link_to user_path(@book.user) do%>
                <%= attachment_image_tag @book.user, :profile_image, :fill,100,100, format:'jpeg', fallback: "no-image.jpeg"%><br />
                <%= @book.user.name%>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.favorite_by?(current_user)%>
                <%= link_to book_favorites_path(@book.id), {method: :delete} do %>
                  <i class="fas fa-heart text-danger"></i>
                  <%= @book.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to book_favorites_path(@book.id), {method: :post} do %>
                  <i class="fas fa-heart"></i>
                  <%= @book.favorites.count %>
                <% end %>
              <% end %>
            </td>
            <% if @book.user_id == current_user.id%>
              <td>
                <%= link_to "Edit", edit_book_path(@book), class:"btn  btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger", 'data-confirm'=>'本当に消しますか？' %>
              </td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</main>