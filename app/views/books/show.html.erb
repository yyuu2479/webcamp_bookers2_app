<div class="container">
  <div class="row">
    <%= render 'books/list', book: @book_new, user: @user%>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book.user) do%>
              <%= attachment_image_tag @book.user, :profile_image, :fill,50,50, format:'jpeg', fallback: "no-image.jpeg"%><br />
              <%= @book.user.name%>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <!--いいね機能-->
          <td class="favorites-btn">
            <%= render 'favorites/favorite-btn', book: @book%>
          </td>
          
          
          
          <td>
            コメント数: <%= @book_comments.count %>
          </td>
          <!--編集・削除機能-->
          <% if @book.user_id == current_user.id%>
            <td>
              <%= link_to "Edit", edit_book_path(@book), class:"btn  btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger", 'data-confirm'=>'本当に消しますか？' %>
            </td>
          <% end %>
        </tr>
      </table>
    <!--コメント一覧-->
      <table>
        <% @book_comments.each do |book|%>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill,65,65, format: 'jpeg', fallback: 'no-image.jpeg'%></td>
            <td><%= book.comment %></td>
            <% if book.user.id == current_user.id%>
              <td>
                <%= link_to book_book_comment_path(@book.id, book.id), {method: :delete} do%>
                  <button class="btn btn-danger btn-sm">Destroy</button>
                <% end %>
              </td>
            <%end%>
          </tr>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= book.user.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    <!--コメント機能-->
      <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, class:"form-control"%>
        </div>
        <%= f.submit '送信' %>
      <% end %>
    </div>
  </div>
  </div>